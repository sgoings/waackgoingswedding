<div id="feature-wrapper">
  <div class="12u">
    <div id="onecolumn-content" class="5grid-layout" style="text-align: center">
      <div class="row">
        <div class="12u" class="mobileUI-main-content">
          <section>
            
            <% if flash[:search_status] %>
              <div class="notice"><%= flash[:search_status] %></div><br/>
            <% end %>

            <%= form_tag({controller: "people", action: "index"}, method: "get") do %>
              <p><%= label_tag(:address, "Enter your address:") %></p>
              <p><%= text_field_tag(:address) %>
              <%= submit_tag("Search") %></p>
            <% end %>

            <br/>
            <p>Some tips if you're having trouble:</p>
            <ul>
              <li>Enter as written on your envelope, or...</li>
              <li>Enter your house number, or...</li>
              <li>Call: (303) 862-0491</li>
              <li>Email: <a href="mailto:sethgoings@gmail.com">sethgoings@gmail.com</li>
            </ul>

          </section>
        </div>
      </div>
    </div>
  </div>
</div>