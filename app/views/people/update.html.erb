<div id="feature-wrapper">
  <div class="12u">
    <div id="onecolumn-content" class="5grid-layout" style="text-align: center">
      <div class="row">
        <div class="12u" class="mobileUI-main-content">
          <section>

              <% if @person %>

              <%= form_for(@person) do |f| %>

              <h3>RSVP Details</h3><br/>

              <table style="margin: auto">

                <tr>
                  <td><%= f.label :name %></td>
                  <td><%= f.text_field :name, disabled: true %></td>
                </tr>

                <tr>
                  <td><%= f.label :address %></td>
                  <td><%= f.text_field :address, disabled: true %></td>
                </tr>

                <tr>
                  <td><%= f.label :city %></td>
                  <td><%= f.text_field :city, disabled: true %></td>
                </tr>

                <tr>
                  <td><%= f.label :state %></td>
                  <td><%= f.text_field :state, disabled: true %></td>
                </tr>

                <tr>
                  <td><%= f.label :attend %></td>
                  <td><%= f.check_box :attend %></td>
                </tr>             

                <tr>
                  <td colspan="2"><%= f.submit "Update" %></td>
                </tr>

              </table>

            <% end %>
            <% end %>

            <% if flash[:update_status] %>
              <div class="notice"><%= flash[:update_status] %></div><br/>
            <% end %>

          </section>
        </div>
      </div>
    </div>
  </div>
</div>
