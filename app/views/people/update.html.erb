<div id="feature-wrapper">
  <div class="12u">
    <div id="onecolumn-content" class="5grid-layout" style="text-align: center">
      <div class="row">
        <div class="12u" class="mobileUI-main-content">
          <section>

              <% if @person %>

              <%= form_for(@person) do |f| %>

                <h3>RSVP Details</h3><br/>

                <!-- RSVP Info -->
                <p><%= @person.name %></p>
                <p><%= @person.address %></p>
                <p><%= @person.city %>, <%= @person.state %>, <%= @person.zip %></p></br>

                <!-- Adults -->
                <p>
                  <%
                    adult_hash=[]
                    0.upto(@person.orig_adults) { |i| adult_hash[i] = i }
                  %>

                  Adults: <%= f.select :actual_adults, adult_hash %>
                </p>

                <!-- Kids -->
                <%
                  if !@person.orig_kids.nil?
                    kid_hash=[]
                    0.upto(@person.orig_kids) { |i| kid_hash[i] = i }
                %>
                  <p>
                    Kids: <%= f.select :actual_kids, kid_hash %>
                  </p>
                <% end %>

                <!-- Attending -->
                <br/>
                <p>
                  <%= f.check_box :attend %> Attending
                </p>

                <p>
                  Email (optional): <%= f.text_field :email %>
                </p>

                <br/>
                <p><%= f.submit "Update" %></p>

              <% end %>

            <% end %>

            <% if flash[:update_status] %>
              <br/><div class="notice"><%= flash[:update_status] %></div>
            <% end %>

          </section>
        </div>
      </div>
    </div>
  </div>
</div>
